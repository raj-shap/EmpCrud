@model IEnumerable<EmpCrud.Models.Employee>
@* @model IEnumerable<EmpCrud.Models.EmployeeViewModel> *@

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Add Employee</a>
</p>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Employees</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Hobby</th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>
                            @item.HobbyName
                        </td>

                        <td><a asp-controller="Employee" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a></td>
                        <td><a asp-controller="Employee" class="btn btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a></td>
                        <td><a asp-controller="Employee" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>